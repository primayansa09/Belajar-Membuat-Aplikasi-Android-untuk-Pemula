<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintCircleRadius="5dp"
    android:orientation="vertical"
    android:elevation="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/whitesoft">
        <ImageView
            android:id="@+id/photo_user"
            android:layout_width="180dp"
            android:layout_height="175dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            tools:src="@drawable/budioktaviyan"/>
        <TextView
            android:id="@+id/nama_user"
            style="@style/TextAppearance.AppCompat.Value"
            tools:text="Nama User"
            android:textSize="14sp"
            android:maxLines="1"
            android:fontFamily="@font/mmedium"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/user_name"
            style="@style/TextAppearance.AppCompat.Field"
            android:layout_toRightOf="@id/photo_user"
            android:layout_below="@id/nama_user"
            tools:text="User Name"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"/>
        <TextView
            android:id="@+id/location"
            style="@style/TextAppearance.AppCompat.Field"
            android:layout_toRightOf="@id/photo_user"
            android:layout_below="@id/user_name"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            tools:text="Location"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>